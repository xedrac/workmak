// Workmak Keyboard Layout symbols for xkb on X.Org Server 7.x
// Author: Xedrac 2014
// Layout inspired from the Workman and Colemak layouts

partial alphanumeric_keys
xkb_symbols "workmak" {

    name[Group1]= "English (Workmak)";

    include "us(basic)"

    // Alphanumeric section
    key <AD01> {  [   q,  Q   ] };
    key <AD02> {  [   w,  W   ] };
    key <AD03> {  [   r,  R   ] };
    key <AD04> {  [   p,  P   ] };
    key <AD05> {  [   b,  B   ] };
    key <AD06> {  [   j,  J   ] };
    key <AD07> {  [   m,  M   ] };
    key <AD08> {  [   u,  U   ] };
    key <AD09> {  [   y,  Y   ] };
    key <AD10> {  [   semicolon,  colon   ] };

    key <AC01> {  [   a,  A   ] };
    key <AC02> {  [   s,  S   ] };
    key <AC03> {  [   h,  H   ] };
    key <AC04> {  [   t,  T   ] };
    key <AC05> {  [   g,  G   ] };
    key <AC06> {  [   f,  F   ] };
    key <AC07> {  [   n,  N   ] };
    key <AC08> {  [   e,  E   ] };
    key <AC09> {  [   i,  I   ] };
    key <AC10> {  [   o,  O   ] };

    key <AB01> {  [   z,  Z   ] };
    key <AB02> {  [   x,  X   ] };
    key <AB03> {  [   c,  C   ] };
    key <AB04> {  [   d,  D   ] };
    key <AB05> {  [   v,  V   ] };
    key <AB06> {  [   k,  K   ] };
    key <AB07> {  [   l,  L   ] };
    // End alphanumeric section

    key <CAPS> { [    BackSpace,       Escape,       BackSpace,        BackSpace ] };

    include "level3(ralt_switch)"
};
